{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/eddypro-batch/schemas.json",
  "title": "EddyPro Batch Contracts",
  "type": "object",
  "properties": {
    "runRequest": {
      "type": "object",
      "properties": {
        "site": {"type": "string"},
        "year": {"type": "integer"},
        "input": {"type": "string"},
        "output": {"type": "string"},
        "profile": {"type": "boolean"},
        "storage_tag": {"type": "string"}
      },
      "required": ["site", "year", "input", "output"]
    },
    "scenarioIndexRow": {
      "type": "object",
      "properties": {
        "scenario_id": {"type": "string"},
        "rotation": {"type": "string"},
        "detrending": {"type": "string"},
        "qc_preset": {"type": "string"},
        "n_ok": {"type": "integer"},
        "n_warn": {"type": "integer"},
        "n_err": {"type": "integer"},
        "duration_s": {"type": "number"},
        "throughput_mb_s": {"type": "number"}
      },
      "required": ["scenario_id", "rotation", "detrending", "qc_preset", "n_ok", "n_warn", "n_err", "duration_s", "throughput_mb_s"]
    }
  }
}
